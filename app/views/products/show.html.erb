<p id="notice"><%= notice %></p>


	<div class="product">
		  <p>
			 <%= image_tag(@product.image_url, width: "200", class: "img-zoom img-responsive", data_zoom_image: @product.image_url) %>
			</p>

			<p>
			  <strong>Name:</strong>
			  <%= @product.name %>
			</p>

			<p>
			  <strong>Description:</strong>
			  <%= @product.description %>
			</p>
			

			<p>
			  <strong>Colour:</strong>
			  <%= @product.colour %>
			 </p>

			 <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
			 </p>

			 <p>
			 	<strong>Price:</strong>
			 	<%= @product.price %>
			 </p>

			 	<%= form_tag "/payments/create", :id =>"stripe-button" do %>
				 	<%= hidden_field_tag(:product_id, @product.id) %>
				 	<%= render partial: "shared/stripe_checkout_button" %>
				 <% end %>
			 

			  <%= render partial: "new_comment" %>
			  <%= render partial: "comments" %>
			  <%= will_paginate @comments %>
	 </div>

 <%= @product.highest_rating_comment %>

<%= link_to 'Edit', edit_product_path(@product) %> |
