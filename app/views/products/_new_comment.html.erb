<% if signed_in? %>
	<h4 class="review">Add a review:</h4>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		<p>
			<%= f.label :body, "Comments" %><br>
			<%= f.text_area :body %>
		</p>
		
		<p>
			<div class="rating">
				<%= f.label :rating %><br>
				
			</div>
		</p>
		<p>
			<%= f.submit "Submit", class: "btn btn-default" %>
		</p>
	<% end %>

	<% else %>
		<h4><strong>Add a review:</strong></h4>
		<p>Please login to add a review for this product.</p>

<% end %>